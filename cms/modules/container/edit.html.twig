{% import '@SfsCms/macros/modules_edit.html.twig' as module %}

{% set tagType = form.tag_type.vars.data|default('div') %}
{% set containerType = form.container_type.vars.data|default('container') %}

<{{ tagType }} {{ module.link_class(form.class, 'border border-2 module-container') }} {{ module.link_bg_color(form.bg_color) }}>
    {{ form_row(form.modules, {'container': {
        'attr': {
            'id': form.id.vars.data,
            'class': 'py-5 '~form.class.vars.data|default(''),
            'data-edit-id-target': 'containerIdDiv',
            'data-edit-class-target': 'containerClassDiv',
            'data-edit-class-default': 'py-5',
        }
    }}) }}
</{{ tagType }}>
