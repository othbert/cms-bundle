<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                      https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Softspring\CmsBundle\Model\Page" table="cms_page">

        <field name="name" column="name" type="string" nullable="false"/>

        <field name="dynamicModules" column="dynamic_modules" type="json" nullable="true"/>

        <many-to-one field="layout" target-entity="Softspring\CmsBundle\Model\LayoutInterface" >
            <join-column name="layout_id" referenced-column-name="id" on-delete="RESTRICT" />
        </many-to-one>

        <embedded name="seo" class="Softspring\CmsBundle\Entity\Embeddable\Seo" column-prefix="seo_" />

    </mapped-superclass>

</doctrine-mapping>
