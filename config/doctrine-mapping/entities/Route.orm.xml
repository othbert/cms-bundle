<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                      https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Softspring\CmsBundle\Entity\Route" table="cms_route">
        <cache usage="NONSTRICT_READ_WRITE" />
        <id name="id" type="string" column="id"/>

        <one-to-many field="paths" target-entity="Softspring\CmsBundle\Model\RoutePathInterface" mapped-by="route">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

<!--        <many-to-one field="content" target-entity="Softspring\CmsBundle\Model\ContentInterface" inversed-by="routes">-->
<!--        </many-to-one>-->
    </entity>

</doctrine-mapping>
