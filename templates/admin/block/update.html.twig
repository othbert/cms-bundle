{% trans_default_domain 'sfs_cms_admin' %}
{% extends '@SfsCms/admin_layout.html.twig' %}
{% block title %}{{ 'admin_blocks.update.meta.title'|trans }}{% endblock %}

{% block content %}
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3">Update order</h1>
    </div>
    {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_rest(form) }}
        <div class="d-flex justify-content-end align-items-center">
            <a href="{{ url('sfs_cms_admin_blocks_list') }}" class="btn btn-outline-secondary ml-3">{{ 'admin_blocks.update.actions.cancel.button'|trans }}</a>
            <input type="submit" value="{{ 'admin_blocks.update.actions.update.button'|trans }}" class="btn btn-primary ml-3" />
        </div>
    {{ form_end(form) }}
{% endblock content %}