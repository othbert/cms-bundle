{% trans_default_domain 'sfs_cms_admin' %}

{% extends '@SfsCms/admin_layout.html.twig' %}

{% block body %}
    <div class="d-flex flex-col align-items-stretch vh-100 pt-5">
        <header class="flex-fill p-3 bg-dark fixed-top border-bottom">
            <div class="container-fluid">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                    <a href="#" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                        Preview {{ entity.name }}
                    </a>

                    <div class="col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0"></div>

                    <div class="text-end me-3">
                        <select class="form-select" onchange="document.getElementById('preview').src = this.value; document.getElementById('previewExternalLink').href = this.value">
                            <option value="{{ url('sfs_cms_admin_content_'~content~'_preview_content', {'content':entity, 'locale':'es'}) }}">ES</option>
                            <option value="{{ url('sfs_cms_admin_content_'~content~'_preview_content', {'content':entity, 'locale':'en'}) }}">EN</option>
                        </select>
                    </div>

                    <div class="text-end">
                        <a id="previewExternalLink" target="_blank" class="btn btn-light" href="{{ url('sfs_cms_admin_content_'~content~'_preview_content', {'content':entity, 'locale':app.request.query.get('locale', 'es')}) }}">Abrir <i class="bi bi-box-arrow-up-right"></i></a>
                        <a href="{{ url('sfs_cms_admin_content_'~content~'_details', {'content':entity}) }}" class="btn btn-light">Volver</a>
                        <a href="{{ url('sfs_cms_admin_content_'~content~'_content', {'content':entity}) }}" class="btn btn-light">Editar</a>
                    </div>
                </div>
            </div>
        </header>
        <main class="flex-fill d-flex flex-row align-items-stretch bg-light h-100">
            <div class="pt-4 h-100 w-100">
                <iframe id="preview" src="{{ url('sfs_cms_admin_content_'~content~'_preview_content', {'content':entity, 'locale': app.request.query.get('locale', 'es')}) }}" width="100%" height="100%"></iframe>
            </div>
        </main>
    </div>
{% endblock body %}

