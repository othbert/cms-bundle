{% trans_default_domain 'sfs_cms' %}

{% extends '@SfsCms/admin_layout.html.twig' %}

{% block breadcrums_content %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ url('sfs_cms_admin_pages_list') }}">{{ 'admin_pages.list.breadcrumb'|trans }}</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{ 'admin_pages.update.breadcrumb'|trans }}</li>
{% endblock breadcrums_content %}

{% block content %}
    <h1 class="h3">{{ 'admin_pages.update.title'|trans }}</h1>

    {% include '@SfsCms/admin/page/_page_tabs.html.twig' with {'current':'update', 'page':page} %}

    {{ form_start(form) }}

    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="edit" role="tabpanel" aria-labelledby="edit-tab">
            <div class="container pt-3 pb-3">
                {{ form_row(form.name) }}
                {{ form_row(form.layout) }}
            </div>
        </div>
    </div>

    {{ form_rest(form) }}

    <div class="d-flex justify-content-end align-items-center">
        <a href="{{ url('sfs_cms_admin_pages_list') }}" class="btn btn-outline-secondary">{{ 'admin_pages.update.actions.cancel.button'|trans }}</a>
        <input type="submit" value="{{ 'admin_pages.update.actions.update.button'|trans }}" class="btn btn-primary ml-3" />
    </div>
    {{ form_end(form) }}
{% endblock content %}