{% trans_default_domain 'sfs_cms' %}
{%- block polymorphic_prototype_buttons -%}
    <!-- Buttons -->
    <div id="polymorphic_prototypes" class="dropdown polymorphic-collection-prototypes">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
{#            {{ 'modules.collection.form.add.button'|trans }} {{ name }}#}
            Añadir módulo
        </button>
        <div class="dropdown-menu dropdown-menu-right dropdown-menu--max-height" aria-labelledby="dropdownMenuButton">
            {% for key, prototype in form.vars.prototypes %}
                <button type="button" class="add_polymorphic_node btn btn-link d-block px-2 py-1" {{ block('polymorphic_prototype_button_attributes') }}>
                    {% set trans_domain = prototype.vars.translation_domain | default(translation_domain) | default(false) %}
                    {{ not trans_domain ? prototype.vars.prototype_button_label : prototype.vars.prototype_button_label|trans({}, trans_domain) }}
                </button>
            {% endfor %}
        </div>
    </div>
{%- endblock polymorphic_prototype_buttons -%}

{% block dynamic_form_row %}
    <div class="node-row mt-2 mb-2" {{ block('widget_container_attributes') }}>
        <div class="card">
            <div class="card-header">
                <button type="button" class="float-right btn btn-light remove_polymorphic_node">x</button>
                <h5 class="card-title">
                    <span class="order-polymorphic-node">{{ form.vars.name }}</span>#
{#                    {{ form_label(form) }}#}
                    {{ form.vars.label|trans(form.vars.label_translation_parameters, form.vars.translation_domain) }}
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col">{{ form_widget(form) }}{{ form_errors(form) }}</div>
                </div>
            </div>
        </div>
    </div>
{% endblock dynamic_form_row %}

{% block dynamic_form_widget %}
    <div class="module-edit">
        {% if edit_template|default(false) %}
            <div class="module-preview">
            {% include edit_template %}
            </div>
        {% endif %}

        {% if form_template|default(false) %}
            {% include form_template %}
        {% else %}
            {{ form_widget(form) }}
        {% endif %}
    </div>
{% endblock dynamic_form_widget %}



{% block route_path_collection_row %}
    <div class="product-article-collection collection">
        {{ form_label(form) }} {# uses: route_path_collection_label #}
        {{ form_errors(form) }}
        {{ form_widget(form) }} {# uses: route_path_collection_widget #}
    </div>
{% endblock route_path_collection_row %}

{% block route_path_collection_label %}
    <div class="row my-4">
        <div class="col-sm-6">
            {% set element = 'p' %}
            {% set label_attr = label_attr | merge({'class':'h4'}) %}

            {% if label is not same as(false) -%}
            {% if label is empty -%}
                {%- if label_format is not empty -%}
                    {% set label = label_format|replace({
                        '%name%': name,
                        '%id%': id,
                    }) %}
                {%- else -%}
                    {% set label = name|humanize %}
                {%- endif -%}
            {%- endif -%}
            <{{ element|default('label') }}{% if label_attr %}{% with { attr: label_attr } %}{{ block('attributes') }}{% endwith %}{% endif %}>{{ translation_domain is same as(false) ? label : label|trans({}, translation_domain) }}</{{ element|default('label') }}>
        {%- endif -%}
    </div>
    <div class="col-sm-6 text-right">
        <button type="button" class="btn btn-primary cursor-pointer add_route_path" data-collection="#{{ id }}">
            {{ 'admin_products.list.actions.add.button'|trans }}
        </button>
    </div>
{% endblock route_path_collection_label %}

{% block route_path_collection_widget %}
    {% if prototype is defined and not prototype.rendered %}
        {%- set attr = attr|merge({'data-prototype': form_row(prototype) }) -%}
    {% endif %}
    {% set attr = attr | merge({'class':'product-article-collection-widget col-12'}) %}
    <!-- Nodes -->
    <div {{ block('widget_container_attributes') }}>
        {%- if form.parent is empty -%}
            {{ form_errors(form) }}
        {%- endif -%}
        {{- block('form_rows') -}}
        {{- form_rest(form) -}}
    </div>
{% endblock route_path_collection_widget %}

{% block route_path_row %}
    <div class="node-row mt-2 mb-2" {{ block('widget_container_attributes') }}>
        <div class="row">
            <div class="col-sm-1"><span class="order-product-article-node">{{ form.vars.name }}</span></div>
            <div class="col-sm-10">{{ form_widget(form) }}{{ form_errors(form) }}</div>
            <div class="col-sm-1"><button type="button" class="btn btn-light remove_route_path">x</button></div>
        </div>
    </div>
{% endblock route_path_row %}

{% block route_path_widget %}
    <div class="row {{ not form.parent.vars.valid ? 'show-invalid' }}">
        <div class="col-sm-2">{{ form_label(form.path) }}</div>
        <div class="col-sm-2">{{ form_widget(form.path) }}{{ form_errors(form.path) }}</div>
        <div class="col-sm-2">{{ form_label(form.locale) }}</div>
        <div class="col-sm-2">{{ form_widget(form.locale) }}{{ form_errors(form.locale) }}</div>
        <div class="col-sm-2">{{ form_label(form.cacheTtl) }}</div>
        <div class="col-sm-2">{{ form_widget(form.cacheTtl) }}{{ form_errors(form.cacheTtl) }}</div>
        {{ form_rest(form) }}
    </div>
{% endblock route_path_widget %}
