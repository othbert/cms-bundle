{%- block polymorphic_prototype_buttons -%}
    <!-- Buttons -->
    <div id="polymorphic_prototypes" class="dropdown polymorphic-collection-prototypes">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
{#            {{ 'modules.collection.form.add.button'|trans }} {{ name }}#}
            {{ 'content.add_module.button'|trans({}, 'sfs_cms_contents') }}
        </button>
        <div class="dropdown-menu dropdown-menu-end dropdown-menu--max-height" aria-labelledby="dropdownMenuButton">
            {% for key, prototype in form.vars.prototypes %}
                <button type="button" class="polymorphic-add-button btn btn-link d-block px-2 py-1" {{ block('polymorphic_prototype_button_attributes') }}>
                    {% set trans_domain = prototype.vars.translation_domain | default(translation_domain) | default(false) %}
