            {% endfor %}
        </div>
    </div>
{%- endblock polymorphic_prototype_buttons -%}

{% block module_collection_row %}
    <div class="module-polymorphic-collection">
        {{ form_label(form) }} {# uses: module_collection_label #}
        {{ form_errors(form) }}
        {{ form_widget(form) }} {# uses: module_collection_widget #}
    </div>
{% endblock module_collection_row %}

{% block module_collection_label %}
    <div class="row mt-3 mb-3">
        <div class="col-sm-6">
            {% set element = 'p' %}
            {% set label_attr = label_attr | merge({'class':'h4'}) %}

            {% if label is not same as(false) -%}
                {% if label is empty -%}
                    {%- if label_format is not empty -%}
                        {% set label = label_format|replace({
                            '%name%': name,
                            '%id%': id,
                        }) %}
                    {%- else -%}
                        {% set label = name|humanize %}
                    {%- endif -%}
                {%- endif -%}
                <{{ element|default('label') }}{% if label_attr %}{% with { attr: label_attr } %}{{ block('attributes') }}{% endwith %}{% endif %}>{{ translation_domain is same as(false) ? label : label|trans({}, translation_domain) }}</{{ element|default('label') }}>
            {%- endif -%}
        </div>
        <div class="col-sm-6 text-end">
            {{ block('polymorphic_prototype_buttons') }}
        </div>
    </div>
{% endblock module_collection_label %}

{% block module_collection_widget %}
    {% set attr = attr | merge({'class':'polymorphic-collection-widget '~module_collection_class}) %}
    <!-- Nodes -->
    <div {{ block('widget_container_attributes') }}>
        {%- if form.parent is empty -%}
            {{ form_errors(form) }}
        {%- endif -%}
        {{- block('form_rows') -}}
        {{- form_rest(form) -}}
    </div>
{% endblock module_collection_widget %}

