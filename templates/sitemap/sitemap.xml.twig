<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for url in urls %}
        <url>
            <loc>{{ url.loc }}</loc>
            {% if url.lastmod|default(false) %}<lastmod>{{ url.lastmod }}</lastmod>{% endif %}
            {% if url.changefreq|default(false) %}<changefreq>{{ url.changefreq }}</changefreq>{% endif %}
            {% if url.priority|default(false) %}<priority>{{ url.priority }}</priority>{% endif %}
            {% for alternate in url.alternates|default([]) %}
                <xhtml:link rel="alternate" hreflang="{{ alternate.locale }}" href="{{ alternate.url }}"/>
            {% endfor %}
        </url>
    {% endfor %}
</urlset>
